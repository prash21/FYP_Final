# Create account window
<CreateAccountWindow>:

    # Window name (id)
    name: "create"

    # Variables used in this window
    full_name: full_name
    email: email
    password: passw

    # Layout for this window is a float layout
    # "Labels" are text displays and "TextInputs" are input fields
    FloatLayout:
        cols:1
        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: 28
                font_name: 'Montserrat Regular 400'
                color: (87/255.0, 85/255.0, 85/255.0, 1)
                bold: True

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Full Name: "
                font_size: 22
                font_name: 'Montserrat Regular 400'
                color: (0, 0, 0, 1)

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                id: full_name
                multiline: False
                font_size: 22
                font_name: 'Montserrat Regular 400'
                multiline: False
                back_color: (0.157, 0.455, 0.753, 1.0)
                size_hint: 0.4, 0.1
                hint_text: 'Type name here'

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: 22
                font_name: 'Montserrat Regular 400'
                color: (0, 0, 0, 1)

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.1
                id: email
                font_size: 22
                font_name: 'Montserrat Regular 400'
                multiline: False
                back_color: (0.157, 0.455, 0.753, 1.0)
                size_hint: 0.4, 0.1
                hint_text: 'Type email here'

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: 22
                font_name: 'Montserrat Regular 400'
                color: (0, 0, 0, 1)

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.1
                id: passw
                font_size: 22
                font_name: 'Montserrat Regular 400'
                multiline: False
                back_color: (0.157, 0.455, 0.753, 1.0)
                size_hint: 0.4, 0.1
                hint_text: 'Type password here'
                # Hide password characters when typing, for security purposes
                password: True

        HaveAccountButton:
            pos_hint: {"x":0.25,"y":0.2}
            size_hint: 0.5, 0.08
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Already have an Account? Log In"
            on_release:
                # Transition animation between pages
                root.manager.transition.direction = "left"
                # Call the login() function from UI_main after clicking
                root.login()

        SubmitButton:
            pos_hint: {"x":0.25,"y":0.1}
            size_hint: 0.5, 0.08
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 15**4
            on_release:
                # Transition animation between pages
                root.manager.transition.direction = "left"
                # Call the submit() function from UI_main after clicking
                root.submit()

        ForgotPasswordButton:
            pos_hint: {"x":0.25,"y":0.02}
            size_hint: 0.5, 0.08
            font_size: (root.width**2 + root.height**2) / 16**4
            font_name: 'Montserrat Regular 400'
            text: "Forgot password?"
            back_color: (87/255.0, 85/255.0, 85/255.0, 1)
            on_release:
                # Transition animation between pages
                root.manager.transition.direction = "up"
                # Move to "ForgotPasswordWindow" after clicking
                app.root.current = "forgotpassw"

# Button styles for buttons created above
